{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src/",
      "paths": {
        "@/shared/*": ["shared/*"],
        "@/features/*": ["features/*"],
        "@/widgets/*": ["widgets/*"],
        "@/entities/*": ["entities/*"],
      }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "tailwind.config.js", "next.config.js", "src/shared/icons/FacebookFilled/index.js"  ],
  "exclude": [
    "node_modules"
  ]
}
